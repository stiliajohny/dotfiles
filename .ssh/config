Include config.d/*

Host * !github.com
  ControlMaster auto
  ControlPersist 4800
  VisualHostKey yes
  Compression yes
  PasswordAuthentication no
  PubkeyAuthentication yes
  IdentitiesOnly yes
  PreferredAuthentications publickey
  RequestTTY yes
  ForwardX11 yes
  Ciphers aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes128-ctr
  MACs hmac-sha1,hmac-sha2-256,hmac-sha2-512,umac-128-etm@openssh.com,hmac-sha2-512-etm@openssh.com
  KexAlgorithms diffie-hellman-group-exchange-sha256,diffie-hellman-group14-sha1,diffie-hellman-group-exchange-sha1
  RemoteCommand if [ command -v tmux &> /dev/null ]; then echo "Tmux not found, Using bash" && bash  ; else tmux; fi
  HashKnownHosts yes
  Protocol 2
  TCPKeepAlive yes
  RemoteForward no
  ForwardAgent no
  SendEnv LSCOLORS
  SendEnv LANG
  SendEnv PAGER
  SendEnv LC_ALL
  SendEnv LESS
  SendEnv EDITOR


Host github.com
  HostName github.com
  IdentityFile ~/.ssh/github_ed25519
  User git

